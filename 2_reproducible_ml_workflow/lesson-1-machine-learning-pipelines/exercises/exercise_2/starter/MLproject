name: download_data
conda_env: conda.yml

entry_points:
  main: 
    parameters:
      file_url: 
        description: URL of the file
        type: uri
      artifact_name:
        description: Name for the Wandbd artifact to be created
        type: str
      artifact_type:
        description: type of artifact to be created
        type: str
        default: raw_data 
      artifact_description:
        description: description for the artifact to be created
        type: str
    
    command: >-
      python download_data.py --file_url {file_url} \
                              --artifact_name {artifact_name} \
                              --artifact_type {artifact_type} \
                              --artifact_description {artifact_description}      
